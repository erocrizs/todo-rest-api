    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "node-json-db": "^2.2.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "chai": "^4.3.7",
